        </details>
        <div class="level-content">
            <div class="chat-area">
                @foreach (var msg in _level7Messages)
                {
                    <div class="msg @(msg.IsUser ? "user" : "ai")">
                        <span class="msg-role">@(msg.IsUser ? "👤" : "🤖")</span>
                        <span class="msg-text">@((MarkupString)msg.Content)</span>
                    </div>
