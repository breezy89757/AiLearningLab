            <span class="level-badge">L6</span>
            <div class="level-title">
                <h2>@L["L6_Title"]</h2>
                <p>@L["L6_Desc"]</p>
            </div>
            <button class="btn btn-secondary btn-sm" @onclick="() => ClearLevel(6)">@L["Clear"]</button>
